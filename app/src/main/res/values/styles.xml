<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.SampleImage.Normal" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.SampleImage.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Button Colored -->
    <style name="Widget.SampleImage.Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAppearance">@style/TextAppearance.SampleImage.Button</item>
        <item name="android:textColor">#fff</item>
    </style>

    <!-- Button Borderless -->
    <style name="Widget.SampleImage.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/TextAppearance.SampleImage.Normal</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.SampleImage.Button.Borderless.Light">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Dialog -->
    <style name="Theme.SampleImage.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.SampleImage.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
